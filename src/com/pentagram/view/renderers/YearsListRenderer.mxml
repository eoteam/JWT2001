				if(index+1 < yearSlider.dataProvider.length) 
					yearSlider.dataProvider.getItemAt(index+1).selection  = 1.3;
				
				if(index+2 < yearSlider.dataProvider.length) 
					yearSlider.dataProvider.getItemAt(index+2).selection  = 1.1;
			}


