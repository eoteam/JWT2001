<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 implements="mx.core.IToolTip" width="240" height="105"
		 xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:vo="com.pentagram.model.vo.*">
	<fx:Script>
		<![CDATA[
			public var _text:String;
			
			[Bindable]
			public function get text():String {
				return country.name;
			}
			public function set text(value:String):void {
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<vo:Country id="country" />	
	</fx:Declarations>
	<s:Path rotation="90" y="39"	
			id="path12"  winding="nonZero"
			data="M 0 0 L 10.231 16.626 L 20.466 0 L 0 0 Z" x="1">
		<s:fill>
			<s:SolidColor color="#1A1A1A" alpha="0.9"/>
		</s:fill>
		<s:filters>
			<s:DropShadowFilter alpha="0.4" angle="90" distance="2" quality="2"/>
		</s:filters>
	</s:Path>
	<s:Rect radiusX="4" radiusY="4" top="0" bottom="0" left="0" right="0">
		<s:fill>
			<s:SolidColor color="#1A1A1A" alpha="0.9"/>
		</s:fill>
		<s:filters>
			<s:DropShadowFilter alpha="0.4" angle="90" distance="2" quality="2"/>
		</s:filters>
	</s:Rect>
	
	<s:VGroup width="100%" height="100%">
		<s:HGroup paddingLeft="6" paddingRight="6" verticalAlign="middle" height="35">
			<s:Label fontSize="14" text="{country.name}" verticalCenter="0" horizontalCenter="0" color="#ffffff" fontFamily="FlamaBook" />
			<s:Rect width="100%" />
			<s:Image source="{country.thumb}" skinClass="com.pentagram.view.skins.controls.FlagSkin" />
		</s:HGroup>	
		<s:Line  width="100%" height="1">
			<s:stroke>
				<s:SolidColorStroke caps="none" color="#4D4D4D" joints="miter" miterLimit="4" weight="1"/>
			</s:stroke>
		</s:Line>
	</s:VGroup>

	

</s:Group>	

