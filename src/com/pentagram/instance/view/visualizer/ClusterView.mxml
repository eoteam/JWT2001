					if(parent.visible) {
						var c:CirclePacking = parent.getChildAt(0) as CirclePacking;
						c.x = parent.width/2;
						c.width = parent.width;
						c.y = parent.height/2;
						c.height = parent.height;
						c.draw();
					}
				}
