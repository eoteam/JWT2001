<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" creationComplete="group1_creationCompleteHandler(event)"
		 xmlns:mx="library://ns.adobe.com/flex/mx">

	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			protected function button1_clickHandler(event:MouseEvent):void
			{
				currentState = currentState == "open"?"closed":"open";
			}
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				optionsHolder.setStyle("horizontalScrollPolicy","off");
				optionsHolder.setStyle("verticalScrollPolicy","off");
				
			}
		]]>
	</fx:Script>
	<fx:Declarations>

	</fx:Declarations>
	
	<s:states>
		<s:State name="closed" />
		<s:State name="open" />
	</s:states>
	<s:transitions>
		<s:Transition toState="*">
			<s:Resize target="{optionsHolder}" duration="500" />
		</s:Transition>
	</s:transitions>
	
	
	<s:Group width="100%" contentBackgroundAlpha="1"  contentBackgroundColor="#595A5C">
		<s:Button skinClass="com.pentagram.view.skins.buttons.DoubleArrowButton" chromeColor="0x1a1a1a" left="6" top="2" bottom="2" click="button1_clickHandler(event)"/>
		<s:Rect width="0.25" height="100%" left="24">
			<s:stroke>
				<s:SolidColorStroke weight="0.25" color="0x666666"/>
			</s:stroke>
		</s:Rect>
		<s:Label verticalCenter="0" text="View Options" left="25" right="0" click="button1_clickHandler(event)"  mouseChildren="false"
		color="#FFFFFF" paddingTop="2" paddingBottom="2" paddingLeft="4" fontFamily="FlamaBold"/>		
	</s:Group>
	
	
	<s:Rect width="100%" height="0.25" top="24">
		<s:stroke>
			<s:SolidColorStroke color="0x666666" weight="0.25" />
		</s:stroke>
	</s:Rect>	
	
	<s:Scroller width="100%" height.closed="0" height.open="100"  top="25" id="optionsHolder">
		<s:VGroup width="100%" clipAndEnableScrolling="false" gap="4">
			<s:HGroup paddingLeft="8">
				<s:CheckBox  label="X-Ray Mode" id="xrayToggle"  left="6"  height="25" selected="true" color="0xffffff"/>
			</s:HGroup>
		
			<s:Rect width="100%" height="0.25">
				<s:stroke>
					<s:SolidColorStroke color="0x666666" weight="0.25" />
				</s:stroke>
			</s:Rect>
			
			<s:Button label="Close Tooltips" id="closeTooltipsBtn" styleName="darkButton" width="100%" />
			
			<s:Rect width="100%" height="0.25">
				<s:stroke>
					<s:SolidColorStroke color="0x666666" weight="0.25" />
				</s:stroke>
			</s:Rect>		
			
			<s:HGroup paddingLeft="8" verticalAlign="middle">
				<s:Label text="Radius" color="0xffffff"/>
				<s:HSlider minimum="10" value="25" maximum="100" id="maxRadiusSlider" snapInterval="0.01" stepSize="0.01"/>				
			</s:HGroup>
		</s:VGroup>
	</s:Scroller>
</s:Group>
